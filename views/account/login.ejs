<html>
    <head>
        <title>Login Page</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- FONTS -->
        <link rel="stylesheet" href="/css/font/fonts.css">
        
                    
        <!-- JS -->
        <script src="js/login.js"></script>

        <!-- CSS -->
        <link rel="stylesheet" type="text/css" href="css/login.css">  
        <link rel="stylesheet" href="/css/fa/css/font-awesome.min.css">
        <link rel="shortcut icon" type="image/png" href="/res/pizza.ico">
        
    </head>
    <body>
        
        <div class = "main">

            <% if (fail && fail.length > 0 ){%>
                <div class ="popup">
                    <span class="fa fa-exclamation-circle"></span>
                    <span class="msg"><%= fail %></span>
                    </div>
            <% } %>
            <% if (denied && denied.length > 0 ){%>
                <div class ="popup">
                    <span class="fa fa-exclamation-circle"></span>
                    <span class="msg"><%= denied %></span>
                    </div>
            <% } %>

            <% if (success && success.length > 0 ){%>
                <div class ="popup2">
                    <span class="fa fa-check-circle"></span>
                    <span class="msg"><%= success %></span>
                    </div>
            <% } %>
    
            <div class ="inner">
                <div class = "login-div">
                    <form class = "form-1" method="post" action="/login">
                        <input required type = "text" class = "input uname" id = "username"  name="un" placeholder = "username">
                        <input required type = "password" class = "input pword" id = "password" name="pw" placeholder = "password">
                        <input type = "submit" class = "submit-button" id = "login-submit" value = "Login">
                    </form>
                </div>
                <a href = "/forgot-pass1" class = "forgot">Forgot Password</a>
            </div>
        </div>
    </body>
</html>
    