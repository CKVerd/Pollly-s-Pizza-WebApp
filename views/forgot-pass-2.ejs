<html>
    <head>
        <title>Forgot Password</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- FONTS -->
        <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

        <!-- JS -->
        <script src="js/forgot.js"></script>

        <!-- CSS -->
        <link rel="stylesheet" type="text/css" href="css/base.css">
        <link rel="stylesheet" type="text/css" href="css/forgot.css">
        <link rel="stylesheet" type="text/css" href="css/forgot2.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <div class = "main">
            <div class = "inner-col">
                <div class = "row-1">
                    <a href = "/forgot-pass1" class = "back-button">â—„ </a>
                    <p class = "back-header">Forgot Password</p>
                        <% if (message && message.length > 0 ){%>
                            <div class ="error-col">
                                <span class="fa fa-exclamation-circle"></span>
                                <span class="msg_forgot2"><%= message %></span>
                            </div>
                        <% } %>
                </div>
                    
                     
                <div class = "row-body-2">
                    <p class = "inner-header-2">Answer Security Questions:</p>
                    <div class = "answer-item-container">
                        <form class = "security-answer-form" action="/forgot-pass3" method="POST">
                            <div class = "sec-questions">
                                <label for="question1" class = "question"><%=q1%></label>
                                <label for="question1" class = "question"><%=q2%></label>
                                <label for="question1" class = "question"><%=q3%></label>
                            </div>
                            <div class = "sec-answers">
                            
                                <input type = "text" placeholder="Answer" class="ans-loc a1" name="a1">
                                <input type = "text" placeholder="Answer" class="ans-loc a2" name="a2">
                                <input type = "text" placeholder="Answer" class="ans-loc a3" name="a3">
                                <input class = "next-button2" type = "submit" value = "Next">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>