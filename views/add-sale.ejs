<html>
    <head>
        <title>Add Sale</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- FONTS -->
        <link rel="stylesheet" href="/css/font/fonts.css">

        <!-- JS -->
        <script>
            function multiply() {
            var first_number = parseInt(document.getElementById("Text1").value);
            var second_number = parseInt(document.getElementById("Text2").value);
            var result = first_number * second_number;
            document.getElementById("txtresult").value = result;
            }
        </script>

        <!-- CSS -->
        <link rel="stylesheet" type="text/css" href="/css/base.css">
        <link rel="stylesheet" type="text/css" href="/css/add-sale.css">
    </head>
    <body>
        <div class = "main">
            <div class = "inner-col">
                <div class = "row-1">
                    <a href = "/sales" class = "back-button">â—„ Sales</a>
                </div>
                <div class = "row-body" >
                    <h1>Add Sale</h1>
                    <form class = "add-form" action="/addSales" method="post">
                        <label>Product Name</label>
                        <input required  readonly type="text" name="ProductName" id="" class = "totalOut" value="<%=rows.productName%>">
                        <label>Price</label>
                        <input required  readonly type="text" name="Price" id="Text2" class = "totalOut" value="<%=rows.price%>">
                        <label>Quantity</label>
                        <input required type="number" name="Qty" id="Text1" min="1" onchange="multiply()">
                        <label>Total</label>
                        <input type="text" readonly name="Total" id="txtresult" class = "totalOut">
                        <% for (const inv of recipe) { %>
                            <input required  readonly type="hidden" name="ingredients[]" class = "ingredient-name add-input" value="<%=inv.ingredients%>"><%}%>
                        <% for (const inv of recipe) { %>
                        <input class = "ingredient-add add-input" type= "hidden" value="<%=inv.recipe_qty%>" readonly name= "qty[]">
                            <%}%>
                        <div class = "outcome">
                            <button type = "button" class = "cancel-button" onclick ="window.location.href = '/sales'">Cancel</button>
                            <input type = "submit" class = "submit-button">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>